<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Main Window Style-->
    <Style x:Key="MainWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource DarkOceanBrush}"/>
        <Setter Property="Width" Value="340"/>
        <Setter Property="Height" Value="640"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="WindowStyle" Value="None"/>
    </Style>
    
    <!--Top App Bar Style-->
    <Style x:Key="TopAppBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PurpleBlueBrush}"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>
    
    <!--Bottom App Bar Style-->
    <Style x:Key="BottomAppBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PurpleBlueBrush}"/>
        <Setter Property="Height" Value="72"/>
    </Style>
    
    <!--Navigation Item Style-->
    <Style x:Key="NavItemContainerStyle" TargetType="Border">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="NavItemSelectedContainerStyle" BasedOn="{StaticResource NavItemContainerStyle}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SelectedItemBrush}"/>
    </Style>
    
    <!--Movie Card Style-->
    <Style x:Key="MovieCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Margin" Value="4"/>
    </Style>
    
    <!--Movie Poster Border-->
    <Style x:Key="MoviePosterBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="Width" Value="90"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
    
    <!--Movie Image Style-->
    <Style x:Key="MovieImageStyle" TargetType="Image">
        <Setter Property="Width" Value="90"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="Stretch" Value="UniformToFill"/>
    </Style>
    
    <!--Icon Button Style-->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="15"/>
        <Setter Property="Height" Value="15"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>