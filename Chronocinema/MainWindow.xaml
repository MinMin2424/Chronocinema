<Window x:Class="Chronocinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chronocinema"
        xmlns:views="clr-namespace:Chronocinema.Views"
        mc:Ignorable="d"
        Title="Chronocinema"
        Style="{StaticResource WindowStyle}">

    <Grid>
        <ContentControl Content="{Binding CurrentView}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type views:MainScreen}">
                    <views:MainScreen DataContext="{Binding}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type views:DetailScreen}">
                    <views:DetailScreen DataContext="{Binding}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type views:EditMediaScreen}">
                    <views:EditMediaScreen DataContext="{Binding}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type views:WatchlistScreen}">
                    <views:WatchlistScreen DataContext="{Binding}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type views:AddMediaScreen}">
                    <views:AddMediaScreen DataContext="{Binding}"/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
