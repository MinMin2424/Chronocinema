<Application x:Class="Chronocinema.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Chronocinema"
              xmlns:converters="clr-namespace:Chronocinema.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Brushes.xaml"/>
                <ResourceDictionary Source="Styles/Typography.xaml"/>
                <ResourceDictionary Source="Styles/ComponentStyles.xaml"/>
                
                <ResourceDictionary Source="/Styles/Components/RatingSliderStyles.xaml"/>
                <ResourceDictionary Source="/Styles/Components/DeleteDialogStyles.xaml"/>
                
                <ResourceDictionary Source="/Styles/Screens/MainScreenStyles.xaml"/>
                <ResourceDictionary Source="/Styles/Screens/DetailScreenStyles.xaml"/>
                <ResourceDictionary Source="/Styles/Screens/EditMediaScreenStyles.xaml"/>
                <ResourceDictionary Source="/Styles/Screens/AddMediaScreenStyles.xaml"/>
                <ResourceDictionary Source="/Styles/Screens/WatchlistScreenStyles.xaml"/>
                <ResourceDictionary Source="/Styles/Screens/AuthScreenStyles.xaml"/>
                <ResourceDictionary Source="/Styles/Screens/ProfileScreenStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BooleanToSearchingConverter x:Key="BooleanToSearchingConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
