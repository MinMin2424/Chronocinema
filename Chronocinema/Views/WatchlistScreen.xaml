<UserControl x:Class="Chronocinema.Views.WatchlistScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chronocinema.Views"
             mc:Ignorable="d" 
             d:Style="{StaticResource ScreenStyle}">
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- Top App Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Bottom App Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top App Bar -->
        <Border Grid.Row="0" Style="{StaticResource TopAppBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <TextBlock Grid.Column="0" Text="Watchlist" Style="{StaticResource HeaderText}" VerticalAlignment="Center"/>
                <!-- Action Buttons -->
                <Button Grid.Column="1" Style="{StaticResource IconButtonStyle}" Command="{Binding NavigateToProfileCommand}" Margin="20,10,0,10">
                    <Image Source="/Images/user.png"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Padding="16">
            <StackPanel>
                
                <!-- Empty State -->
                <TextBlock x:Name="EmptyStateText"
                           Text="No items in watchlist"
                           Style="{StaticResource SectionHeaderTextStyle}"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,100,0,0"
                           Visibility="Collapsed"/>
                
                <!-- Watchlist Items -->
                <ItemsControl ItemsSource="{Binding WatchlistItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource WatchlistCardStyle}"  MouseLeftButtonDown="MovieCard_MouseLeftButtonDown">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Poster -->
                                    <Border Grid.Column="0" Style="{StaticResource WatchlistPosterStyle}" Margin="0,0,12,0">
                                        <Image Source="{Binding PosterUrl}" Stretch="UniformToFill">
                                            <Image.Clip>
                                                <RectangleGeometry Rect="0,0,60,80" RadiusX="6" RadiusY="6"/>
                                            </Image.Clip>
                                        </Image>
                                    </Border>
                                    
                                    <!-- Content -->
                                    <StackPanel Grid.Column="1">
                                        <!-- Title -->
                                        <TextBlock Text="{Binding Title}" Style="{StaticResource WatchlistTitleTextStyle}"/>
                                        <!-- Info Grid -->
                                        <Grid Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                        </Grid>
                                        <!-- Left Info -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Type, StringFormat='Type: {0}'}" Style="{StaticResource WatchlistInfoTextStyle}"/>
                                            <TextBlock Text="{Binding Genre, StringFormat='Genre: {0}'}" Style="{StaticResource WatchlistInfoTextStyle}"/>
                                        </StackPanel>
                                        <!-- Right Info -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Year, StringFormat='Year: {0}'}" Style="{StaticResource WatchlistInfoTextStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom App Bar -->
        <Border Grid.Row="2" Style="{StaticResource BottomAppBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Home Nav Item -->
                <StackPanel Grid.Column="0" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding NavigateToHomeCommand}">
                            <Image Source="../Images/home.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Home" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Add Nav Item -->
                <StackPanel Grid.Column="1" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding ShowAddMediaCommand}">
                            <Image Source="../Images/add.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Add" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Watchlist Nav Item -->
                <StackPanel Grid.Column="2" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemSelectedContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding NavigateToWatchlistCommand}">
                            <Image Source="../Images/watchlist.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Watchlist" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
    
</UserControl>
