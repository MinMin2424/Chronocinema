<UserControl x:Class="Chronocinema.Views.ProfileScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chronocinema.Views"
             mc:Ignorable="d" 
             d:Style="{StaticResource ScreenStyle}">
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- Top App Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Bottom App Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top App Bar -->
        <Border Grid.Row="0" Style="{StaticResource TopAppBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <TextBlock Grid.Column="0" Text="User Profile" Style="{StaticResource HeaderText}" VerticalAlignment="Center"/>
                <!-- Action Button -->
                <Button Grid.Column="1" 
                        Style="{StaticResource IconButtonStyle}" 
                        Command="{Binding LogoutCommand}"
                        Margin="20,10,0,10">
                    <Image Source="/Images/logout.png"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel Margin="20" HorizontalAlignment="Center">
                <!-- Profile Picture -->
                <Border Style="{StaticResource ProfilePictureBorderStyle}">
                    <Image Source="/Images/user-profile.jpg">
                        <Image.Clip>
                            <RectangleGeometry Rect="0,0,200,200" RadiusX="100" RadiusY="100"/>
                        </Image.Clip>
                    </Image>
                </Border>
                <!-- Username -->
                <TextBlock Text="{Binding CurrentUser.UserName}"
                           Style="{StaticResource SubHeaderText}"
                           HorizontalAlignment="Center"
                           Width="300"
                           Margin="0,0,0,10"/>
                <!-- User Info -->
                <StackPanel Margin="0,0,0,20" Width="300">
                    <TextBlock Text="{Binding CurrentUser.Email}"
                               Style="{StaticResource UserProfileInfoStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding CurrentUser.RegistrationDate, StringFormat='Registration date: {0:dd.MM.yyyy}'}"
                               Style="{StaticResource UserProfileInfoStyle}"/>
                </StackPanel>
                <!-- Statistics -->
                <Border Style="{StaticResource ProfileStatisticsStyle}">
                    <StackPanel>
                        <TextBlock Text="Statistics" 
                                   Style="{StaticResource ProfileStatisticsHeader}"/>
                        <StackPanel>
                            <TextBlock Text="{Binding AddedMediasCount}"
                                       Style="{StaticResource ProfileAddMediasCountHeader}"/>
                            <TextBlock Text="Added Medias"
                                       Style="{StaticResource UserProfileInfoStyle}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding PlanToWatchCount}"
                                       Style="{StaticResource ProfileAddMediasCountHeader}"/>
                            <TextBlock Text="Plan to Watch"
                                       Style="{StaticResource UserProfileInfoStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom App Bar -->
        <Border Grid.Row="2" Style="{StaticResource BottomAppBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Home Nav Item -->
                <StackPanel Grid.Column="0" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding NavigateToHomeCommand}">
                            <Image Source="../Images/home.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Home" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Add Nav Item -->
                <StackPanel Grid.Column="1" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding ShowAddMediaCommand}">
                            <Image Source="../Images/add.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Add" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Watchlist Nav Item -->
                <StackPanel Grid.Column="2" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding NavigateToWatchlistCommand}">
                            <Image Source="../Images/watchlist.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Watchlist" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
