<UserControl x:Class="Chronocinema.Views.AddMediaScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chronocinema"
             xmlns:views="clr-namespace:Chronocinema.Views"
             xmlns:converters="clr-namespace:Chronocinema.Converters"
             mc:Ignorable="d" 
             d:Style="{StaticResource ScreenStyle}">

    <UserControl.Resources>
        <converters:BooleanToSearchingConverter x:Key="BooleanToSearchingConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:StringIsNullOrEmptyToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- Top App Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Bottom App Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top App Bar -->
        <Border Grid.Row="0" Style="{StaticResource TopAppBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" 
                        Style="{StaticResource IconButtonStyle}" 
                        Command="{Binding GoBackCommand}" 
                        Margin="10,0">
                    <Image Source="/Chronocinema;component/Images/back-arrow.png"/>
                </Button>

                <!-- Header -->
                <TextBlock Grid.Column="1" Text="Add New Media" 
                           Style="{StaticResource HeaderText}" 
                           VerticalAlignment="Center" 
                           TextTrimming="CharacterEllipsis" 
                           Margin="10,0"/>

                <Button Grid.Column="2"
                        Style="{StaticResource IconButtonStyle}"
                        Command="{Binding ShowInfoCommand}"
                        Margin="10,0"
                        Width="30" Height="30"
                        ToolTip="Show help">
                    <Image Source="/Chronocinema;component/Images/info.png"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <StackPanel Grid.Row="1" Style="{StaticResource AddMediaStackPanelStyle}">
            
            <!-- Title Input -->
            <Grid Margin="0,0,0,20">
                <TextBox x:Name="TitleTextBox"
                         Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         Height="40"
                         FontSize="16"/>
                <TextBlock Text="Enter title of movie or series"
                           Style="{StaticResource PlaceholderTextStyle}"
                           Margin="12,0,0,0"
                           Visibility="{Binding Title, Converter={StaticResource StringIsNullOrEmptyToVisibilityConverter}}"/>
            </Grid>

            <!-- Add Button -->
            <Button Content="{Binding IsSearching, Converter={StaticResource BooleanToSearchingConverter}}"
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource PrimaryActionButton}"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,0,10"/>
            
            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Style="{StaticResource ErrorMessageTextBlockStyle}"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        </StackPanel>

        <!-- Bottom App Bar -->
        <Border Grid.Row="2" Style="{StaticResource BottomAppBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Home Nav Item -->
                <StackPanel Grid.Column="0" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding NavigateToHomeCommand}">
                            <Image Source="../Images/home.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Home" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Add Nav Item -->
                <StackPanel Grid.Column="1" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemSelectedContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding ShowAddMediaCommand}">
                            <Image Source="../Images/add.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Add" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Watchlist Nav Item -->
                <StackPanel Grid.Column="2" Style="{StaticResource BottomNavItemStyle}">
                    <Border Style="{StaticResource NavItemContainerStyle}">
                        <Button Style="{StaticResource IconButtonStyle}" Command="{Binding NavigateToWatchlistCommand}">
                            <Image Source="../Images/watchlist.png"/>
                        </Button>
                    </Border>
                    <TextBlock Text="Watchlist" Style="{StaticResource NavItemText}" Margin="0,2,0,0"/>
                </StackPanel>

                <Popup x:Name="InfoPopup"
                       Style="{StaticResource PopupStyle}"
                       PlacementTarget="{Binding ElementName=TitleTextBox}"
                       IsOpen="{Binding IsInfoPopupOpen}">
                    <Border Style="{StaticResource PopupBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="How to add media:"
                                       Style="{StaticResource SubHeaderText}"
                                       Margin="0,0,0,16"/>
                            <StackPanel Style="{StaticResource PopupMainStackPanelStyle}">
                                <StackPanel Style="{StaticResource PopupInnerStackPanelStyle}">
                                    <TextBlock Text="1. "
                                               Style="{StaticResource PopupBodyTextStyle}"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Type the movie or series title in the field"
                                               Style="{StaticResource PopupBodyTextStyle}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource PopupInnerStackPanelStyle}">
                                    <TextBlock Text="2. "
                                               Style="{StaticResource PopupBodyTextStyle}"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="The system will automatically search our database"
                                               Style="{StaticResource PopupBodyTextStyle}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource PopupInnerStackPanelStyle}"
                                            Margin="0,0,0,16">
                                    <TextBlock Text="3. "
                                               Style="{StaticResource PopupBodyTextStyle}"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="If found, it will be added to your collection"
                                               Style="{StaticResource PopupBodyTextStyle}"/>
                                </StackPanel>
                                <Button Content="Got it!"
                                        Command="{Binding CloseInfoCommand}"
                                        Style="{StaticResource PrimaryActionButton}"
                                        HorizontalAlignment="Center"
                                        Width="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
                
            </Grid>
        </Border>

    </Grid>
    
</UserControl>
