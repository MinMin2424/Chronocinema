<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Movie Card Style-->
    <Style x:Key="MovieCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!--Movie Poster Border-->
    <Style x:Key="MoviePosterBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!--Movie Image Style-->
    <Style x:Key="MovieImageStyle" TargetType="Image">
        <Setter Property="Width" Value="90"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="Stretch" Value="UniformToFill"/>
    </Style>
    
    <!-- Item StackPanel -->
    <Style x:Key="MovieStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="4"/>
    </Style>
    
    <!-- Empty State -->
    <Style x:Key="EmptyStateBorderStyle" TargetType="Border">
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="EmptyStateStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="20"/>
    </Style>

    <Style x:Key="EmptyStatePictureBorderStyle" TargetType="Border">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <Style x:Key="EmptyStateMainTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource SubHeaderText}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="EmptyStateBodyTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
    </Style>

</ResourceDictionary>