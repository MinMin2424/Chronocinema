<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Windows Style-->
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource DarkOceanBrush}"/>
        <Setter Property="Width" Value="340"/>
        <Setter Property="Height" Value="640"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="WindowStyle" Value="None"/>
    </Style>

    <Style x:Key="ScreenStyle" TargetType="UserControl">
        <Setter Property="Background" Value="{StaticResource DarkOceanBrush}"/>
        <Setter Property="Width" Value="340"/>
        <Setter Property="Height" Value="640"/>
    </Style>

    <!--Top App Bar Style-->
    <Style x:Key="TopAppBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PurpleBlueBrush}"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>
    
    <!--Bottom App Bar Style-->
    <Style x:Key="BottomAppBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PurpleBlueBrush}"/>
        <Setter Property="Height" Value="72"/>
    </Style>

    <Style x:Key="BottomNavItemStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!--Navigation Item Style-->
    <Style x:Key="NavItemContainerStyle" TargetType="Border">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="NavItemSelectedContainerStyle" BasedOn="{StaticResource NavItemContainerStyle}" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SelectedItemBrush}"/>
    </Style>

    <!--Icon Button Style-->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="25"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}" 
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SelectedItemBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SelectedItemBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>