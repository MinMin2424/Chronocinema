<Window x:Class="Chronocinema.Windows.EditMediaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chronocinema.Windows"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}">
    <Grid>

        <Grid.RowDefinitions>
            <!-- Top App Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Action Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top App Bar -->
        <Border Grid.Row="0" Style="{StaticResource TopAppBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Back Button -->
                <Button Grid.Column="0" Style="{StaticResource IconButtonStyle}" Command="{Binding CancelCommand}" Margin="10,0">
                    <Image Source="/Images/cancel.png"/>
                </Button>
                
                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="Edit Media"
                           Style="{StaticResource HeaderText}"
                           VerticalAlignment="Center"
                           Margin="10,0"/>

                <!-- Save Button -->
                <Button Grid.Column="2" Style="{StaticResource IconButtonStyle}" Command="{Binding SaveCommand}" Margin="10,0">
                    <Image Source="/Images/save.png"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
            <StackPanel Margin="16">
                
                <!-- Poster -->
                <Border Style="{StaticResource MoviePosterBorderStyle}" Width="120" Height="160" HorizontalAlignment="Center">
                    <Image Source="{Binding MediaItem.PosterUrl}" Stretch="UniformToFill"/>
                </Border>
                
                <!-- Movie Title (read-only) -->
                <TextBlock Text="{Binding MediaItem.Title}"
                           Style="{StaticResource SectionHeaderTextStyle}"
                           TextAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <!-- Edit Form -->
                <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                    
                    <!-- Status -->
                    <StackPanel Style="{StaticResource EditFormItemStyle}">
                        <TextBlock Text="Status" Style="{StaticResource FormLabelText}"/>
                        <ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding MediaItem.Status}" Style="{StaticResource ModernComboBox}"/>
                    </StackPanel>
                    
                    <!-- Rating -->
                    <StackPanel Style="{StaticResource EditFormItemStyle}">
                        <TextBlock Text="Rating (0-10)" Style="{StaticResource FormLabelText}"/>
                        <TextBox Text="{Binding MediaItem.Rating}" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                    
                    <!-- Start Date-->
                    <StackPanel Style="{StaticResource EditFormItemStyle}">
                        <TextBlock Text="Start Date" Style="{StaticResource FormLabelText}"/>
                        <DatePicker SelectedDate="{Binding MediaItem.StartDate}" Style="{StaticResource ModernDatePicker}"/>
                    </StackPanel>

                    <!-- End Date-->
                    <StackPanel Style="{StaticResource EditFormItemStyle}">
                        <TextBlock Text="End Date" Style="{StaticResource FormLabelText}"/>
                        <DatePicker SelectedDate="{Binding MediaItem.EndDate}" Style="{StaticResource ModernDatePicker}"/>
                    </StackPanel>
                    
                    <!-- Notes -->
                    <StackPanel Style="{StaticResource EditFormItemStyle}">
                        <TextBlock Text="Notes" Style="{StaticResource FormLabelText}"/>
                        <TextBox Text="{Binding MediaItem.Notes}" 
                                 Style="{StaticResource ModernTextBox}" 
                                 AcceptsReturn="True" 
                                 Height="100" 
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"/> 
                    </StackPanel>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <Border Grid.Row="2" Style="{StaticResource ActionButtonsBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Cancel Button -->
                <Button Grid.Column="0"
                        Content="Cancel"
                        Style="{StaticResource ModernButton}"
                        Background="{StaticResource CardBackgroundBrush}"
                        Command="{Binding CancelCommand}"
                        Margin="0,0,8,0"/>

                <!-- Save Button -->
                <Button Grid.Column="1"
                    Content="Save"
                    Style="{StaticResource ModernButton}"
                    Background="{StaticResource CardBackgroundBrush}"
                    Command="{Binding SaveCommand}"
                    Margin="0,0,8,0"/>
            </Grid>
        </Border>

    </Grid>
</Window>
